<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_common" >

    <LinearLayout
        android:id="@+id/left_btn_grp"
        android:layout_width="wrap_content"
        android:layout_height="240.0dip"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="vertical" >
    </LinearLayout>

    <FrameLayout
        android:layout_width="188.0dip"
        android:layout_height="188.0dip"
        android:layout_centerInParent="true" >

        <RelativeLayout
            android:layout_width="167.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/question_type_bg"
                android:layout_width="167.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/question_type_bg"
                android:layout_alignParentLeft="true"
                android:contentDescription="@null"
                android:src="@drawable/bg_category_left" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/question_type_bg"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:src="@drawable/bg_category_right" />
        </RelativeLayout>



            <ImageView
                android:id="@+id/music_circle"
                android:layout_width="188.0dip"
                android:layout_height="188.0dip"
                android:contentDescription="@null"
                android:src="@drawable/bg_circle_black" />


        <TextView
            android:id="@+id/question_type"
            android:layout_width="167.0dip"
            android:layout_height="30.0dip"
            android:layout_gravity="bottom|center"
            android:background="@drawable/bg_category" />

        <ImageView
            android:id="@+id/music_pointer"
            android:layout_width="37.0dip"
            android:layout_height="33.0dip"
            android:layout_gravity="top|right|center"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:contentDescription="@null"
            android:src="@drawable/music_pointer" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/right_btn_grp"
        android:layout_width="wrap_content"
        android:layout_height="240.0dip"
        android:layout_alignParentRight="true"
        android:gravity="center"
  
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/answer_input_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/answer_input_middle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8.0dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/gridview_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="2.0dip"
        android:layout_marginRight="2.0dip"
        android:layout_marginTop="20.0dip"
        android:orientation="horizontal" />

</RelativeLayout>